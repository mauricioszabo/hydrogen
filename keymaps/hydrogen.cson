# Keybindings require three things to be fully defined: A selector that is
# matched against the focused element, the keystroke and the command to
# execute.
#
# Below is a basic keybinding which registers on all platforms by applying to
# the root workspace element.

# For more detailed documentation see
# https://atom.io/docs/latest/behind-atom-keymaps-in-depth

# ---------- Editor --------------
'atom-text-editor:not([mini])':
    'shift-enter': 'hydron:run-and-move-down'
    'shift-alt-enter': 'hydron:run-cell-and-move-down'
    'alt-i': 'hydron:toggle-inspector'

# Override shift-enter and cmd-enter
'.platform-darwin atom-text-editor:not([mini])':
    'shift-enter': 'hydron:run-and-move-down'
    'cmd-alt-enter': 'hydron:run-cell'
    'cmd-enter': 'hydron:run'
    'cmd-ctrl-enter': 'hydron:run-all'

# Override ctrl-enter
'.platform-win32 atom-text-editor:not([mini]), .platform-linux atom-text-editor:not([mini])':
    'ctrl-enter': 'hydron:run'
    'ctrl-shift-backspace': 'hydron:clear-results'
    'ctrl-alt-enter': 'hydron:run-cell'
    'ctrl-enter': 'hydron:run'
    'ctrl-shift-alt-enter': 'hydron:run-all'

# ---------- Workspace -----------
'.platform-darwin atom-workspace':
    'cmd-alt-backspace': 'hydron:clear-results'

'.platform-win32 atom-workspace, .platform-linux atom-workspace':
    'ctrl-shift-backspace': 'hydron:clear-results'
